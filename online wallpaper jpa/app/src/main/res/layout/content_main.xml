<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:layout_gravity="top"
                android:layout_margin="20dp"
                android:background="@color/trans"
                android:backgroundTint="@color/trans"
                android:clipToPadding="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:scrollbars="horizontal"
                app:tabBackground="@color/trans"
                app:tabIndicator="@drawable/round_shape"
                app:tabIndicatorColor="@color/shdow_white"
                app:tabIndicatorGravity="center"
                app:tabIndicatorHeight="40dp"
                app:tabMinWidth="50dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/hitam"
                app:tabTextAppearance="@style/TABBoldTextAppearance"
                app:tabTextColor="@color/softgrey" />
        </androidx.viewpager.widget.ViewPager>
    </FrameLayout>

</LinearLayout>